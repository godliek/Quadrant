<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="cmps121.quadrant.MainActivity" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/solid_background">

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_alignRight="@+id/frameLayout1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/clear_background"
            android:textColor="#ffffffff"
            android:text="History" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background" >

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_toRightOf="@+id/textView1"
            android:background="@drawable/button"
            android:text="Finish"
            android:textColor="#ffffffff" />

        <FrameLayout
            android:id="@+id/frameLayout3"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignTop="@+id/frameLayout2"
            android:background="@drawable/text_border" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:text="0.0 ft"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/frameLayout3"
            android:layout_alignLeft="@+id/frameLayout3"
            android:text="Elevation"
            android:textColor="#ff737373"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/frameLayout2"
            android:layout_alignLeft="@+id/frameLayout2"
            android:text="Distance"
            android:textColor="#ff737373"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="66dp"
            android:background="@drawable/record_button"
            android:text="Record"
            android:textColor="#ffffffff" />

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="60dp"
            android:layout_height="22dp"
            android:layout_above="@+id/textView1"
            android:layout_marginBottom="49dp"
            android:layout_toLeftOf="@+id/textView1"
            android:background="@drawable/text_border" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:text="0.0 mi"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="72dp"
            android:textColor="#ff737373"
            android:text="00:00:00"
            android:textSize="40sp" />

    </RelativeLayout>

</LinearLayout>